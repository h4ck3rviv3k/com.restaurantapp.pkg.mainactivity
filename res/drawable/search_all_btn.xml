<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <solid android:color="@color/search_btn_color" />

            <stroke android:width="1dp" android:color="@color/search_btn_color" />

            <corners android:radius="70dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/search_btn_color" android:startColor="@color/search_btn_color" />

            <stroke android:width="2dp" android:color="@color/search_btn_color" />

            <corners android:radius="8dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape></item>

</selector>