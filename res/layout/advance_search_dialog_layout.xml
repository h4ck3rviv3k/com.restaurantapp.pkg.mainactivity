<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="#ffffff"
    android:dividerPadding="5dp"
    android:padding="2dp" >

    <TableRow
        android:id="@+id/top_row"
        android:layout_width="600dp"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/search_title_food"
            style="@style/custom_titlebar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/likenadd_btn"
            android:text="Food" />

        <Button
            android:id="@+id/search_title_beverages"
            style="@style/custom_titlebar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/likenadd_btn"
            android:text="Beverages" />

        <Button
            android:id="@+id/search_title_specials"
            style="@style/custom_titlebar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/likenadd_btn"
            android:text="Specials" />

        <Button
            android:id="@+id/search_title_drink"
            style="@style/custom_titlebar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/likenadd_btn"
            android:text="Drinks" />
    </TableRow>

    <TableRow
        android:id="@+id/first_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" >

        <Button
            android:id="@+id/first_row_btn1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/all_btn"
            android:gravity="left"
            android:text="All" />

        <Button
            android:id="@+id/first_row_btn2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"
            android:background="@drawable/all_btn"
            android:gravity="left"
            android:text="All" />

        <Button
            android:id="@+id/first_row_btn3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/all_btn"
            android:gravity="left"
            android:text="All" />
    </TableRow>

    <TableRow
        android:id="@+id/second_row"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/second_row_list1"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clipToPadding="true"
            android:divider="@null"
            android:paddingTop="2dp"
            android:scrollbars="horizontal" />

        <ListView
            android:id="@+id/second_row_list2"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_weight="2"
            android:clipToPadding="true"
            android:divider="@null"
            android:paddingTop="2dp"
            android:scrollbars="horizontal" />

        <ListView
            android:id="@+id/second_row_list3"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clipToPadding="true"
            android:divider="@null"
            android:paddingTop="2dp"
            android:scrollbars="horizontal" />
    </TableRow>

    <TableRow
        android:id="@+id/third_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/dialog_cancel_btn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="@drawable/likenadd_btn"
            android:text="Cancel" />
    </TableRow>

</TableLayout>