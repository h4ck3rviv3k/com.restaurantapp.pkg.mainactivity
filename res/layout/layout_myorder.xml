<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F1F1CD"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/myorder_food_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/special_icon" />

    <TextView
        android:id="@+id/myorder_titletag"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/myorder_food_img"
        android:layout_toRightOf="@id/myorder_food_img"
        android:text="title" />

    <TextView
        android:id="@+id/myorder_price"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/myorder_titletag"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/myorder_food_img"
        android:text="Rs" />

    <TextView
        android:id="@+id/myorder_quantity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/myorder_titletag"
        android:layout_marginLeft="55dp"
        android:layout_toRightOf="@id/myorder_titletag"
        android:text="Quantity" />

    <ImageButton
        android:id="@+id/myorder_minus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myorder_quantity"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/myorder_price"
        android:background="@drawable/round_btn"
        android:src="@drawable/minus"
        android:text="minus"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/myorder_edit_txt"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/myorder_quantity"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/myorder_minus_btn"
        android:background="@drawable/round_btn"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/myorder_plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myorder_quantity"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/myorder_edit_txt"
        android:background="@drawable/round_btn"
        android:src="@drawable/plus"
        android:text="plus"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/myorder_remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/myorder_quantity"
        android:layout_marginRight="5dp"
        android:background="@drawable/likenadd_btn"
        android:text="Remove" />

</RelativeLayout>